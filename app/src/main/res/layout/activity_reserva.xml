<!-- Reserva -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reserva"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reserva"
    android:orientation="vertical"
    android:clipToOutline="true">


    <View
        android:id="@+id/image_3"
        android:layout_width="411dp"
        android:layout_height="350dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/image_3"
        android:elevation="65dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:layout_weight="1"
        android:fillViewport="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/carrera_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Carrera 13 con calle 39"
                android:textAppearance="@style/carrera_13_"
                android:textStyle="bold"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.206"
                tool:layout_constraintStart_toStartOf="parent"
                tool:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="117dp"
                android:layout_height="27dp"
                android:layout_marginTop="40dp"
                android:text="Ver en Mapa"
                android:textAppearance="@style/ver_en_mapa"
                android:textStyle="bold"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.179"
                tool:layout_constraintStart_toStartOf="parent"
                tool:layout_constraintTop_toBottomOf="@+id/carrera_13" />

            <ImageView
                android:id="@+id/screen_shot"
                android:layout_width="332dp"
                android:layout_height="320dp"
                android:layout_marginTop="8dp"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintStart_toStartOf="parent"
                tool:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:srcCompat="@drawable/mapa" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Espacio:"
                android:textAppearance="@style/espacio_"
                android:textStyle="bold"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.155"
                tool:layout_constraintStart_toStartOf="parent"
                tool:layout_constraintTop_toBottomOf="@+id/screen_shot" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="4dp"
                android:text="Piso 3, Sala 003-12"
                android:textAppearance="@style/piso_3_sala"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.198"
                tool:layout_constraintStart_toEndOf="@+id/textView3"
                tool:layout_constraintTop_toBottomOf="@+id/screen_shot" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Reserva:"
                android:textAppearance="@style/reserva_"
                android:textStyle="bold"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.147"
                tool:layout_constraintStart_toStartOf="parent"
                tool:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="10:00 AM - 03:00 PM"
                android:textAppearance="@style/am_03_00_pm"
                tool:layout_constraintEnd_toEndOf="parent"
                tool:layout_constraintHorizontal_bias="0.261"
                tool:layout_constraintStart_toEndOf="@+id/textView5"
                tool:layout_constraintTop_toBottomOf="@+id/textView4" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:elevation="30dp"
        android:background="@drawable/menu_bar_style">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/house" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/mapmaker" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/menu" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/account" />
    </LinearLayout>


</LinearLayout>
